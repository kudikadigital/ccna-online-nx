generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Lead {
  id               Int      @id @default(autoincrement())
  nome             String
  email            String
  whatsapp         String
  plano            String?   @default("pendente")    // ← OPCIONAL COM DEFAULT
  perfil           String?   // ← ADICIONE ESTE CAMPO (você está enviando do front)
  experiencia      String?  // novo
  objetivo         String?  // novo
  profissao        String?  // novo
  empresa          String?  // novo
  cargo            String?  // novo
  status           String   @default("lead") // lead, pendente_pagamento, confirmado
  paymentId        String?  // para referência do pagamento
  paymentStatus    String?      // "pending", "approved", "comprovativo_enviado"
  comprovativoUrl  String?      // URL do comprovativo no storage
  comprovativoName String?      // Nome do arquivo do comprovativo
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}