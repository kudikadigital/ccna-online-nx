generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model Lead {
  id               Int      @id @default(autoincrement())
  nome             String
  email            String
  whatsapp         String
  plano            String   // "vista" ou "parcelado"
  experiencia      String?  // novo
  objetivo         String?  // novo
  profissao        String?  // novo
  empresa          String?  // novo
  cargo            String?  // novo
  status           String   @default("lead") // lead, pendente_pagamento, confirmado
  paymentId        String?  // para referÃªncia do pagamento
  paymentStatus    String?  // status do pagamento
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}